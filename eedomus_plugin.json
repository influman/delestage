				{ "value": "1", "description": "Cascade", "icon": "delestage_cascade.png", "http_url": "http://localhost/script/?exec=delestage.php", "http_type": "GET",  "http_params": "&power=[VAR1]&apii=[VAR2]&periph=[VAR3]&action=set&value=[RAW_VALUE]" },
				{ "value": "2", "description": "Cascado-cyclique", "icon": "delestage_cyclique.png", "http_url": "http://localhost/script/?exec=delestage.php", "http_type": "GET",  "http_params": "&power=[VAR1]&apii=[VAR2]&periph=[VAR3]&action=set&value=[RAW_VALUE]" },
				{ "value": "99", "description": "MaJ appareils", "icon": "delestage_maj.png", "http_url": "http://localhost/script/?exec=delestage.php", "http_type": "GET",  "http_params": "&power=[VAR1]&apii=[VAR2]&periph=[VAR3]&action=set&value=[RAW_VALUE]" },
				{ "value": "999", "description": "Délestage en cours...", "hidden":"1", "icon": "delestage_go.png", "http_url": "http://localhost/script/?exec=delestage.php", "http_type": "GET",  "http_params": "&power=[VAR1]&apii=[VAR2]&periph=[VAR3]&action=set&value=[RAW_VALUE]" }
