		{
			"device_id": "delestage",
			"module_id": "51",
			"type": "http",
			"name_fr": "Délestage - Statut",
			"icon": "delestage_statut.png",
			"utilisation_id": "35",
			"parameters":
			{
				"VAR1": "plugin.parameters.PUISSANCE",
				"VAR2": "plugin.parameters.APII",
      			"VAR3": "plugin.parameters.APP1(plugin.parameters.APPSTOP1),plugin.parameters.APP2(plugin.parameters.APPSTOP2),plugin.parameters.APP3(plugin.parameters.APPSTOP3)",
				"value_type": "string",
				"ignore_errors": 3,
				"RAW_URL": "http://localhost/script/?exec=delestage.php&power=[VAR1]&apii=[VAR2]&periph=[VAR3]&action=status",
				"RAW_XPATH": "/DELESTAGE/STATUT",
				"POLLING": "5"
			}
		},
		{
			"device_id": "mode",
			"parent_id": "delestage",
			"module_id": "41",
			"type": "http",
			"name_fr": "Délestage - Mode",
			"icon": "delestage_mode.png",
			"utilisation_id": "43",
			"parameters":
			{
				"VAR1": "plugin.parameters.PUISSANCE",
				"VAR2": "plugin.parameters.APII",
      			"VAR3": "plugin.parameters.APP1(plugin.parameters.APPSTOP1),plugin.parameters.APP2(plugin.parameters.APPSTOP2),plugin.parameters.APP3(plugin.parameters.APPSTOP3)",
				"value_type": "list",
				"ignore_errors": 3,
				"RAW_URL": "",
				"RAW_XPATH": "",
